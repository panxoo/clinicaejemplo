@model List<SelectListItem>

@if (Model.Count > 0)
{
   

        <ul class="list-group" id="CollectAreAten">

            @foreach (SelectListItem dt in Model)
            {

                <li class="list-group-item">
                    <div class="custom-control custom-checkbox">

                        <input id="@dt.Value" value="@dt.Value" name="Roles" type="checkbox" class="custom-control-input">

                        <label for="@dt.Value" class="custom-control-label">@dt.Text</label>
                    </div>
                </li>
            }

        </ul>
 
}
else
{
    <p>Todos las Areas de Atención esta asignada a la sucursal.</p>
}