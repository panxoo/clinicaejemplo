@model DataCollect<Rol_ClienteMantList>

@{
    ViewData["Title"] = "Rol_ClienteMant"; 
}


<header class="page-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h1 class="separator">ROLES DE CLIENTE</h1>
            <nav class="breadcrumb-wrapper" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="icon dripicons-home"></i></a></li>
                    <li class="breadcrumb-item active" aria-current="page">Roles de Cliente</li>
                </ol>
            </nav>
        </div>
        <ul class="actions top-right">
            <li class="dropdown">
                <a href="javascript:void(0)" class="btn btn-fab" data-toggle="dropdown" aria-expanded="false">
                    <i class="la la-ellipsis-h"></i>
                </a>
                <div class="dropdown-menu dropdown-icon-menu dropdown-menu-right">
                    <div class="dropdown-header">
                        Quick Actions
                    </div>
                    <a href="#" class="dropdown-item">
                        <i class="icon dripicons-clockwise"></i> Refresh
                    </a>

                </div>
            </li>
        </ul>
    </div>
</header>

<section class="page-content container-fluid">

    <div class="row">
        <div class="col">
            <div class="card">
                <h5 class="card-header">Title</h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="bs4-table" class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th>
                                        Nombre
                                    </th>
                                    <th>
                                        Roles Activos
                                    </th>
                                    <th>
                                        Opciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Rol_ClienteMantList item in Model.ListDatos)
                                {
                                    <tr>

                                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CantRoles)</td>
                                        <td>
                                            <a asp-area="SudoAdmin" asp-action="Rol_ClienteDetalle" asp-route-id="@item.ClinicaId" asp-route-actmtd="@Model.Metodo@Model.Acciones["Vie"]"><i data-toggle="tooltip" data-placement="top" title="" data-original-title="Visualizar" class="far fa-eye text-secondary fa-2x"></i></a>
                                            <a asp-area="SudoAdmin" asp-action="Rol_ClienteDetalle" asp-route-id="@item.ClinicaId" asp-route-actmtd="@Model.Metodo@Model.Acciones["Upd"]"><i data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar" class="far fa-edit text-success fa-2x"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



