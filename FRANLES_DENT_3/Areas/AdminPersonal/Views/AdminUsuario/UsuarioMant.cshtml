@model UsuarioMantList

@{
    ViewData["Title"] = "UsuarioMant";
}

<header class="page-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h1 class="separator">USUARIOS ADMINISTRATIVOS</h1>
            <nav class="breadcrumb-wrapper" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="icon dripicons-home"></i></a></li>
                    <li class="breadcrumb-item active" aria-current="page">Usuarios Administrativos</li>
                </ol>
            </nav>
        </div>
        <ul class="actions top-right">
            <li class="dropdown">
                <a href="javascript:void(0)" class="btn btn-fab" data-toggle="dropdown" aria-expanded="false">
                    <i class="la la-ellipsis-h"></i>
                </a>
                <div class="dropdown-menu dropdown-icon-menu dropdown-menu-right">
                    <div class="dropdown-header">
                        Quick Actions
                    </div>
                    <a href="#" class="dropdown-item">
                        <i class="icon dripicons-clockwise"></i> Refresh
                    </a>
                    <a asp-area="AdminPersonal" asp-action="CreaUsuario" asp-controller="AdminUsuario" asp-route-actmtd="@Model.Metodo@Model.Acciones["Add"]" class="dropdown-item">
                        <i class="icon dripicons-plus text-success"></i> Agregar
                    </a>
                    <a href="#" class="dropdown-item">
                        <i class="icon dripicons-cloud-download"></i> Export
                    </a>
                    <a href="#" class="dropdown-item">
                        <i class="icon dripicons-help"></i> Support
                    </a>
                </div>
            </li>
        </ul>
    </div>
</header>

<section class="page-content container-fluid">
    <div class="row">
        <div class="col">

            <div class="card">
                <div class="card-header">
                    <h2>Administrador de Usuarios</h2>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    Activo
                                </th>
                                <th>
                                    Nombre Usuario
                                </th>
                                <th>
                                    Perfil
                                </th>
                                <th>
                                    Sucursal
                                </th>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Opciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListDatos)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Activo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Perfil)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Sucursal)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td>
                                        <a asp-area="AdminPersonal" asp-action="UsuarioView" asp-controller="AdminUsuario" asp-route-id="@item.UsuarioId" asp-route-actmtd="@Model.Metodo@Model.Acciones["Vie"]"><i data-toggle="tooltip" data-placement="top" title="" data-original-title="Visualizar" class="far fa-eye text-success fa-2x"></i></a>
                                        <a asp-area="AdminPersonal" asp-action="CreaUsuario" asp-controller="AdminUsuario" asp-route-id="@item.UsuarioId" asp-route-actmtd="@Model.Metodo@Model.Acciones["Upd"]"><i data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar" class="far fa-edit text-success fa-2x"></i></a>
                                        <a asp-area="AdminPersonal" asp-action="ProfilePersonal" asp-controller="AdminPersonal" asp-route-id="@item.UsuarioId" asp-route-actmtd="@Model.Metodo@Model.Acciones["Vie"]"><i data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar" class="far fa-eye-dropper text-success fa-2x"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
</section>
