    <div class="form-group col-md-3">
        <label asp-for="Input.Correo"></label>
        <input type="email" class="form-control" asp-for="Input.Correo" autocomplete="off">
        <span asp-validation-for="Input.Correo" class="text-danger"></span>

    </div>

    <div class="form-group col-md-3">
        <label asp-for="Input.Telefono"></label>
        <input type="tel" class="form-control" asp-for="Input.Telefono" autocomplete="off" />
    </div>

    <div class="form-group col-md-3">
