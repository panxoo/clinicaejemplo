                    <div style='height:500px'>

                        <ul class="list-group list-group-flush">
                            @foreach (SelectListItem diasel in Model.DiaScheduler)
                            {

                                <li class="list-group-item">

                                    <h5 class="p-b-30"> @diasel.Text</h5>

                                    <table class="table v-align-middle">
                                        <thead class="bg-light">
                                            <tr>
                                                <th>
                                                    Tipo Horario
                                                </th>
                                                <th>
                                                    Hora Inicio - Fin
                                                </th>
                                                <th>
                                                    Sucursal
                                                </th>
                                                <th>
                                                    Area Atencion
                                                </th>
                                                <th>
                                                    Opciones
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var valorhm in Model.HorarioMedicos.Where(w => w.DiaWeekId.Equals(Convert.ToInt16(diasel.Value))))
                                            {
                                                <tr>
                                                    <td>
                                                        @valorhm.NombreTipoHorario
                                                    </td>
                                                    <td>
                                                        @valorhm.Hora_Inicio.ToString() - @valorhm.Hora_Fin.ToString()
                                                    </td>
                                                    <td>
                                                        @valorhm.NombreSucursal
                                                    </td>
                                                    <td>
                                                        <select class="form-control">
                                                            @foreach (SelectListItem aa in valorhm.Area_AtencionsSel)
                                                            {
                                                                <option>aa.Text</option>
                                                            }
                                                        </select>
                                                    </td>

                                                    <td>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </li>

                            }
                        </ul>
                    </div>
                </div>
                