@model UsuarioViewInput.HorarioMedicoMant

<form id="AjaxFormMedicos" method="post">
    <div class="modal fade" id="HorarioMedicosModal" tabindex="-1" role="dialog" aria-labelledby="MedicosModal" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Actualizar datos Medico</h5>
                    <a><></a>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div>
                        <div class="form-group col-md-3">
                            <label asp-for=""></label>
                            <select asp-for="" class="form-control" disabled>
                                @foreach (var dato in Model.DiaScheduler )
                                {
                                    <option value="@dato.Value">@dato.Text</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Input.TipoDocumento"></label>
                            <select asp-for="Input.TipoDocumento" class="form-control" disabled>
                                @foreach (var dato in Model.TipoDocumentoSelect)
                                {
                                    <option value="@dato.Value">@dato.Text</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Input.TipoDocumento"></label>
                            <select asp-for="Input.TipoDocumento" class="form-control" disabled>
                                @foreach (var dato in Model.TipoDocumentoSelect)
                                {
                                    <option value="@dato.Value">@dato.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div data-scroll="dark" style='height:500px'>

                        <ul class="list-group list-group-flush">
                            @foreach (SelectListItem diasel in Model.DiaScheduler)
                            {

                                <li class="list-group-item">
                                    <div class="col">
                                        <div class="row">
                                            <div class="col-md-3">
                                                @diasel.Text
                                            </div>
                                            <div class="col-md-9">

                                               
                                                @if (Model.HorarioMedicos.Any(w => w.DiaWeekId.Equals(Convert.ToInt16(diasel.Value))))
                                                {
                                                    <div class="table-responsibe">
                                                        <table class="table table-hover table-sm">

                                                            <thead class="thead-light">
                                                                <tr>
                                                                    <th>Tp Horario</th>
                                                                    <th>Horario</th>
                                                                    <th>Sede</th>
                                                                    <th>Opciones</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (UsuarioViewInput.HorarioMedicoTableMant valorhm in Model.HorarioMedicos.Where(w => w.DiaWeekId.Equals(Convert.ToInt16(diasel.Value))))
                                                                {
                                                                    <tr>
                                                                        <td>
                                                                            @valorhm.NombreTipoHorario
                                                                        </td>
                                                                        <td>
                                                                            @valorhm.Hora_Inicio.ToString(@"hh\:mm") - @valorhm.Hora_Fin.ToString(@"hh\:mm")
                                                                        </td>
                                                                        <td>
                                                                            @valorhm.NombreSucursal
                                                                        </td>
                                                                        <td>
                                                                            <a href="#"  id="BtnHorarioMedicoss"  title="Editar Medico">
                                                                                <i class="fa fa-edit"></i>
                                                                            </a>
                                                                        </td>
                                                                    </tr>

                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-md-9">
                        <div id="ErrorAlert" class="alert alert-danger" style="display:none" role="alert">
                            Error en los datos enviados!
                        </div>
                    </div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnCancel">Cancelar</button>
                    <button type="submit" class="btn btn-success" id="SubmitBtn">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</form>