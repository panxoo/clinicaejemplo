@model LoginViewModels

@{
    ViewData["Title"] = "Home Page";
}


<form class="sign-in-form" asp-controller="Home" asp-action="Index" method="post">
    <div class="card">
        <div class="card-body">

            <a asp-area="" asp-controller="Home" asp-action="Index" class="brand text-center d-block m-b-20">
                <img src="~/lib/assets/img/qt-logo@2x.png" alt="FRANLES DENT" />
            </a>
            <h5 class="sign-in-heading text-center m-b-20">Inicio de Sesión</h5>
            <div class="form-group">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@

                <label asp-for="Input.Login_Usuario" class="sr-only"></label>
                <input asp-for="Input.Login_Usuario" class="form-control" placeholder="Email address" required="" />
                <span asp-validation-for="Input.Login_Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Input.Login_Contrasena" class="sr-only"></label>
                <input asp-for="Input.Login_Contrasena" class="form-control" placeholder="Contraseña" required="" />
                <span asp-validation-for="Input.Login_Contrasena" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-rounded btn-floating btn-lg btn-block"> Inicio Secion</button>

        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}